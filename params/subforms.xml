<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="fieldparams">
		<fieldset name="fieldparams">

			<field
				name="fieldsubform"
				type="text"
				required="true"
				label="PLG_FIELDS_SUBFORM_LABEL"
				description="PLG_FIELDS_SUBFORM_DESCRIPTION"
				default="plugins/fields/subforms/elements/teste.xml"
				hint="plugins/fields/subforms/elements/teste.xmls"
			/>

			<field
				name="fieldlayout"
				type="list"
				label="PLG_FIELDS_SUBFORM_LAYOUT_LABEL"
				required="true"
				default="joomla.form.field.subform.repeatable"
				description="PLG_FIELDS_SUBFORM_LAYOUT_DESCRIPTION"
				>
				<option value="joomla.form.field.subform.repeatable">PLG_FIELDS_SUBFORM_LAYOUT_REPEATABLE_OPTION</option>
				<option value="joomla.form.field.subform.repeatable-table">PLG_FIELDS_SUBFORM_LAYOUT_REPEATABLE_OPTION_TABLE</option>
			</field>

			<field 
				name="fieldmultiple" 
				type="radio"
				default="false"
				required="true"
				class="btn-group btn-group-yesno"
				label="PLG_FIELDS_SUBFORM_MULTIPLE_LABEL" 
				description="PLG_FIELDS_SUBFORM_MULTIPLE_DESCRIPTION">
					<option value="false">JNO</option>
					<option value="true">JYES</option>
			</field>


			<field
				name="fieldmin"
				type="number"
				label="PLG_FIELDS_SUBFORM_MIN_LABEL"
				description="PLG_FIELDS_SUBFORM_MIN_DESCRIPTION"
				default="0"
				required="true"
			/>

			<field
				name="fieldmax"
				type="number"
				label="PLG_FIELDS_SUBFORM_MAX_LABEL"
				description="PLG_FIELDS_SUBFORM_MAX_DESCRIPTION"
				default="1000"
				required="true"
			/>

			
    </fieldset>            
</fields>
</form>
